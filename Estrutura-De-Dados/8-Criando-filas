<body>



    <script>
        class Queue {
            constructor(){
                this.contador = 0;
                this.menorContador = 0;
                this.items = {};
            }
            
            enqueueAddFinalFila( elemento ) {
                this.items[this.contador] = elemento;
                this.contador ++;
            }
            
            
            dequeueRemovePrimeiroFila() {
                if (this == '') {
                    return undefined
                }
                const RESULTADO = this.items[this.menorContador];
                delete this.items[this.menorContador];
                this.menorContador++;
                return RESULTADO;
            }
            
            verTamanho(){
                return this.contador - this.menorContador; 
            }

            eVazio(){
                return this.contador - this.menorContador === 0; 
            }

            esvazia(){
                this.items = {}
                this.contador = 0;
                this.menorContador =  0;
            }
            
            paraCaracteres(){
                if (this.eVazio()) {
                    return '';
                }

                let objetoCaracteres = `${this.items[this.menorContador]}`;
                for ( let i = this.menorContador + 1; i < this.contador; i++ ) {

                    objetoCaracteres = `${objetoCaracteres},${this.items[i]}`;
                    
                }
                return objetoCaracteres;
                
            }
        }
        const FILA = new Queue;
        const QUEUE = new Queue;
    
        console.log(FILA)
        console.log(FILA.enqueueAddFinalFila('NovoItem1'));
        console.log(FILA.enqueueAddFinalFila('NovoItem2'));
        console.log(FILA.enqueueAddFinalFila('NovoItem3'));
        console.log(FILA.dequeueRemovePrimeiroFila());
        
        // console.log(FILA.eVazio());
        // console.log(FILA.verTamanho());
        // console.log(FILA.esvazia());
        console.log(FILA.paraCaracteres());
        
        console.log(QUEUE.enqueueAddFinalFila('Joao'));
        console.log(QUEUE.enqueueAddFinalFila('Jose'));
        console.log(QUEUE.enqueueAddFinalFila('Maria'));
        console.log(QUEUE.enqueueAddFinalFila('Olegario Marciel'));
        console.log(QUEUE.dequeueRemovePrimeiroFila());
        console.log(QUEUE);
        console.log(QUEUE.verTamanho());

    </script>
</body>
</html>
